<div class="contents row">
	<% if customer_signed_in? %>
		<p><%= current_customer.name %>さんのホーム
		</p>
		<h2>保存したイベント</h2>

		<% @clips.each do |clip| %>
		<% event = Event.find(clip.event.id) %>
		　<!-- 自分の保存したイベント一覧 -->

			<div class= "event-box">
				<%= link_to event_path(event.id) do %>
	 				<p>イベント名 : <strong><%= event.eventname %></strong></p>
					<p>参加費 : <%= event.cost %></p>
					<p>開催場所 : <%= event.where %>
					<p>開催日時 : <%= event.when.strftime('%m月%d日 %H：%M') %></p>
				<% end %>
			</div>
			
		<% end %>
	<% end %>
</div>

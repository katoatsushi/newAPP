<h1>こちらはサークル・部活・学生団体のログインページです</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, :placeholder =>"メールアドレスを入力してください", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, :placeholder =>"パスワードを入力してください", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :パスワードを記憶する %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログインする" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

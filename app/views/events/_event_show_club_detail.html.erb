<!-- ユーザーそれぞれの活動詳細、説明 -->
<% if user_signed_in? && current_user.id.to_s == params[:id] %>
	<div class="tabs">
		<input id="all" type="radio" name="tab_item" checked>
			<label class="tab_item" for="all">活動について</label>
		<input id="programming" type="radio" name="tab_item">
			<label class="tab_item" for="programming">年間イベント</label>
		<input id="design" type="radio" name="tab_item">
			<label class="tab_item" for="design">メッセージ</label>
			<div class="tab_content" id="all_content">
				活動内容: <h id="tab_contents"><%= current_user.what_we_do %></h>
				<br>活動日数: <h id="tab_contents"><%= current_user.how_often_we_do %></h>
				<br>活動場所(主に): <h id="tab_contents"><%= current_user.where_we_do %></h>
				<br>どんな雰囲気？: <h id="tab_contents"><%= current_user.atmosphere %></h>
			</div>
			<div class="tab_content" id="programming_content">
				<h id="tab_contents"><%= current_user.annual_events %></h>
			</div>
			<div class="tab_content" id="design_content">
				<h id="tab_contents"><%= current_user.text %></h>
			</div>
	</div>
<% else %>
	<div class="tabs">
		<input id="all" type="radio" name="tab_item" checked>
			<label class="tab_item" for="all">活動について</label>
		<input id="programming" type="radio" name="tab_item">
			<label class="tab_item" for="programming">年間イベント</label>
		<input id="design" type="radio" name="tab_item">
			<label class="tab_item" for="design">メッセージ</label>
			<div class="tab_content" id="all_content">
				活動内容: 
				<h id="tab_contents"><%= @event.user.what_we_do %></h>
				<br>活動日数: 
				<h id="tab_contents"><%= @event.user.how_often_we_do %></h>
				<br>活動場所(主に):
				<h id="tab_contents"><%= @event.user.where_we_do %></h>
				<br>どんな雰囲気？: 
				<h id="tab_contents"><%= @event.user.atmosphere %></h>
			</div>
			<div class="tab_content" id="programming_content">
				<h id="tab_contents"><%= @event.user.annual_events %></h>
			</div>
			<div class="tab_content" id="design_content">
				<h id="tab_contents"><%= @event.user.text %></h>
			</div>
	</div>
<% end %>